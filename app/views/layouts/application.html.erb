<!DOCTYPE html>
<html>
<head>
  <title><%= full_title(yield(:title)) %></title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>

    <!--iOS/android/handheld specific --> 
  <meta name="viewport" content="max-width=device-width, initial-scale=1.0">
  <meta name="apple-mobile-web-app-capable" content="yes">
  <meta name="apple-mobile-web-app-status-bar-style" content="black"> 
  <link href="http://fonts.googleapis.com/css?family=Oswald:400,700" rel="stylesheet" type="text/css">
  <link href="http://fonts.googleapis.com/css?family=Droid Serif:400,400italic,700,700italic" rel="stylesheet" type="text/css">
  <% str = "" %>
  <% Blog.limit(10).order("created_at DESC").pluck('title').each do |f| %>
    <% str << f.tr(" ",",").tr(".",",").gsub(",,",",")+"," %>
  <% end %>

  <meta name="keywords" content="<%=str[0..-2]%>">
  
  <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
  <![endif]-->
</head>
<body>
  <script type="text/javascript">
    $(document).ready(function () {
        $('#content_area').waypoint(function (direction) {
            $('#article-finished').toggleClass('hiding', direction === "up");
        }, {
            offset: function () {
                return $.waypoints('viewportHeight') - $(this).height() + 350;
            }
        });
        $(".no-show").click(function() {
          $("#article-finished").remove();
          return false;
        });
    });
  </script>
  <div id="fb-root"></div>
  <script>(function(d, s, id) {
    var js, fjs = d.getElementsByTagName(s)[0];
    if (d.getElementById(id)) return;
    js = d.createElement(s); js.id = id;
    js.src = "//connect.facebook.net/en_US/all.js#xfbml=1";
    fjs.parentNode.insertBefore(js, fjs);
  }(document, 'script', 'facebook-jssdk'));</script>
  <% if admin_signed_in? %>
    <% if current_admin.id == 1 %>
      <%= link_to 'New Blog', new_blog_path %>
      <%= link_to 'New Photo', new_photo_path %>
    <% end %>
  <% end %>
  <br />

  <div id="header_area">
    <div class="page">
      <header id="header">
        <h1 id="logo">
          <a href="<%= root_path %>">GoneVirul<!--<img src="/" alt="Gone Virul">--></a>
        </h1>
        <div>
          <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
          <!-- GoneVirul -->
          <ins class="adsbygoogle"
               style="display:inline-block;width:728px;height:90px"
               data-ad-client="ca-pub-8318252795689818"
               data-ad-slot="2568607080"></ins>
          <script>
          (adsbygoogle = window.adsbygoogle || []).push({});
          </script>
        <div>
      </header>
    </div>
  </div>
  <div id="content_area" style="min-height:2354px;">
    <div class="page" style="min-height:2354px;">
      <div id="content_box" style="min-height:2354px;">  
        <%= yield %>
        <aside class="sidebar">
          <div id="sidebars">
            <div class="sidebar">
              <ul class="sidebar_list" style="position: absolute;top: 137px;left: 879px;right: 225px;clear: both">
                <li class="widget" style="padding: 17px;"><script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
                  <!-- GoneVirul_Vertical -->
                  <ins class="adsbygoogle"
                       style="display:inline-block;width:300px;height:600px"
                       data-ad-client="ca-pub-8318252795689818"
                       data-ad-slot="5602798685" style="margin-left:167px"></ins>
                  <script>
                  (adsbygoogle = window.adsbygoogle || []).push({});
                  </script>
                </li>
                <li id="widget_recent_entries" class="widget widget-sidebar" style="padding: 10px;"><h3>Latest Stories</h3>
                  <ul class="advanced-recent-posts">
                    <% @blogssidebar.each do |blog| %>
                      <li><a href="<%= blog_path(blog) %>" title="<%= blog.title %>"><% if blog.photos.present? %><img src="<%= blog.photos.first.landing_picture.url(:side_bar) %>" class="wp-post-image"><% end %></a><%= link_to blog.title, blog, title: blog.title %></li>
                    <% end %>
                  </ul>
                </li>
                <li id="facebook_like" class="widget widget-sidebar"><h3>Hey, Join Us On Facebook!</h3></li>
              </ul>
            </div>
          </div><!--sidebars-->
        </aside>
        
        <div class="hiding" id="article-finished">
          <div style="width:290px;">We post stuff just like this every day on Facebook. Like us. You won't regret it.</div>
          <br><div class="fb-like" data-href="https://www.facebook.com/gonevirul" data-width="300px" data-layout="standard" data-action="like" data-show-faces="true" data-share="true"></div>
          <div class="no-show"><a href="#">Close: I already like GoneVirul</a></div>
        </div>
      </div>
      <div class="top"><a href="#top">Back to Top â†‘</a></div>
    </div>
  </div>
  <div style="margin-top:15px;">
    <center><%= link_to "Contact", contact_path %> - <%= link_to "DMCA / Removal Request", dmca_path %> - <%= link_to "Privacy Policy", privacy_path %> - <%= link_to "Submit Content", submit_path %> - <%= link_to "About GoneVirul", about_path %></center>
  </div>
  <%= piwik_tracking_tag %>
</body>
</html>
